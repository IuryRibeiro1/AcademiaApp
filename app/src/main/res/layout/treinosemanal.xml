<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textdias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textviewtreino" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/texttreino"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/textviewdia" />

                <ImageView
                    android:id="@+id/assetadd"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="150dp"
                    app:srcCompat="@drawable/mais" />

                <ImageView
                    android:id="@+id/asset_alterar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_toc_24" />

                <ImageView
                    android:id="@+id/asset_deletar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_baseline_restore_from_trash_24" />




            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>